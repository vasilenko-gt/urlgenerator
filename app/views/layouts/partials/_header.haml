    = link_to('Sign out', destroy_user_session_path,  class: 'btn btn-outline-warning', method: :delete)
  - else
    = link_to('Sign in',  user_session_path,          class: 'btn btn-outline-success mr-1')
    = link_to('Sign up',  new_user_registration_path, class: 'btn btn-outline-primary')